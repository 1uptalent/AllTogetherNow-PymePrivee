<h1>Listing products</h1>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Description</th>
    <th>Cost</th>
    <th>Tax</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= image_tag product.picture.url(:thumb) %></td>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= "%.2f" % product.cost %></td>
    <td><%= "%.2f" % product.tax %></td>
    <td><%= link_to 'Show', [@shop, product] %></td>
    <td><%= link_to 'Edit', edit_shop_product_path(@shop, product) %></td>
    <td><%= link_to 'Destroy', [@shop, product], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_shop_product_path(@shop) %>
