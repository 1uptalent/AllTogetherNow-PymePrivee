<%- content_for :head do -%>
<%= javascript_tag do %>
$(function() {$('.calendar').datepicker( { dateFormat: "yy-mm-dd"}) })
<%- end -%>
<%- end -%>
<div class="input_form">
<%= form_for([@shop, @sale_item]) do |f| %>
  <% if @sale_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sale_item.errors.count, "error") %> prohibited this sale_item from being saved:</h2>

      <ul>
      <% @sale_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><%= f.label :name %></p>
    <p><%= f.text_field :name %></p>
  </div>
  <div class="field">
    <p><%= f.label :description %></p>
    <p><%= f.text_area :description %></p>
  </div>
  <div class="field">
    <p><%= f.label :price %></p>
    <p><%= f.text_field :price %></p>
  </div>
  <div class="field">
    <p><%= f.label :valid_from %></p>
    <p><%= f.text_field :valid_from, :class => "calendar" %></p>
    <p><%= f.label :valid_until %> <em>(not included)</em></p> 
    <p><%= f.text_field :valid_until, :class => "calendar" %></p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>