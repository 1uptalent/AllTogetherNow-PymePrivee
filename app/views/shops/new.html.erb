<%= error_messages_for(@shop) %>
<%= form_for @shop do |f| -%>
<p>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.label :address, "Address" %>
  <%= f.text_area :address %>
</p>
<p>
  <%= f.submit "Submit", :disable_with => 'Submiting...' %>
</p>
<% end -%>