<%= error_messages_for(@shop) %>

<div class="input_form">
  <h1>Create your shop</h1>

  <%= form_for @shop, :html => { :multipart => true } do |f| -%>
    <p><%= f.label :name, "Name" %></p>
    <p><%= f.text_field :name %></p>
    
    <p><%= f.label :description, "Description" %></p>
    <p><%= f.text_area :description %></p>

    <p><%= f.label :address, "Address" %></p>
    <p><%= f.text_area :address %></p>

    <p><%= f.label :logo, "Logo" %></p>
    <p><%= f.file_field :logo %></p>

    <%= f.submit "Submit", :disable_with => 'Submiting...' %>

  <% end -%>
</div>
