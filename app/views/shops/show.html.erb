<div id="shop">
  <h1><%= @shop.name %></h1>
  <%= the_owner_of(@shop) do -%>
  <p><%= link_to "edit", edit_shop_path(@shop)%></p>
  <%- end -%>
  <div class="address"><%= @shop.address %></div>
  <div class="description">
    <% @shop.description.split("\n").each do |p| -%>
      <p><%= p %></p>
    <%- end -%>
  </div>
  <div class="logos">
    <%= image_tag @shop.logo.url %>
  </div>
  <h2>Currently selling</h2>
  <%= render :partial => "/sale_items/sales", :locals => {:sale_items => @shop.sale_items } %>
  <%= the_owner_of(@shop) do -%>
    <%= link_to "Add another item", new_shop_sale_item_path(@shop) %>
  <%- end -%>
</div>